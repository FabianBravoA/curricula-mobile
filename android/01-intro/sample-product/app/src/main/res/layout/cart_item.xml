<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/cart_item_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            tools:src="@drawable/bt_ic_android_pay"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cart_item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The useful item"
                />

            <TextView
                android:id="@+id/cart_item_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="With you always"
                />


            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$22.99"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            tools:text="2"
            />

        <ImageView
            android:id="@+id/cart_item_delete"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

</LinearLayout>